<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/star1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        />
    <ImageView
        android:id="@+id/star2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        app:layout_constraintStart_toEndOf="@id/star1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:id="@+id/star3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        app:layout_constraintStart_toEndOf="@id/star2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:id="@+id/star4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        app:layout_constraintStart_toEndOf="@id/star3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"

        />
    <ImageView
        android:id="@+id/star5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        app:layout_constraintStart_toEndOf="@id/star4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="70dp"
        />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:hint="نظر"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/star5"
        app:layout_constraintStart_toStartOf="@id/star1"
        app:layout_constraintTop_toBottomOf="@id/star1" />

    <Button
        android:id="@+id/submitComment"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/commentEditText"
        app:layout_constraintStart_toStartOf="@id/commentEditText"
        app:layout_constraintTop_toBottomOf="@id/commentEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>