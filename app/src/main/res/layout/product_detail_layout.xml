<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarCardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:id="@+id/productAvatar"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/banner"
            />
        <ImageView
            android:id="@+id/playIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="245dp"
            android:background="@drawable/play_circle"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/productName"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="245dp"
            android:text="@string/change"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/descriptionCardView"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="@id/avatarCardView"
        app:layout_constraintEnd_toEndOf="@id/avatarCardView"
        app:layout_constraintTop_toBottomOf="@id/avatarCardView"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="توضیحات"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userComment"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="نظرات کاربران"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/descriptionCardView"
        app:layout_constraintTop_toBottomOf="@id/descriptionCardView"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/comment"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/descriptionCardView"
        app:layout_constraintTop_toTopOf="@id/userComment"
        app:layout_constraintBottom_toBottomOf="@id/userComment"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="نظر دهید"
        android:textSize="15dp"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/commentRefreshing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/avatarCardView"
        app:layout_constraintEnd_toEndOf="@id/avatarCardView"
        app:layout_constraintTop_toBottomOf="@id/userComment"
        android:layout_marginTop="15dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>