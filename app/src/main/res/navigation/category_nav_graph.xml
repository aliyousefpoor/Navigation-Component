<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cat_nav_graph"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.bottomnavigation.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/category_fragment"
        >
        <action
            android:id="@+id/action_categoryFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.bottomnavigation.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/second_fragment"
        >
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.bottomnavigation.ThirdFragment"
        android:label="ThirdFragment"
        tools:layout="@layout/third_fragment"
        />
</navigation>