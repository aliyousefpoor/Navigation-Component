<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cat_nav_graph"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.bottomnavigation.categorytab.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/category_fragment"
        >
        <action
            android:id="@+id/action_categoryFragment_to_productListFragment"
            app:destination="@id/productListFragment" />

    </fragment>
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.bottomnavigation.categorytab.products.ProductListFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/product_list_fragment"
        />

</navigation>