<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_nav_graph"
    app:startDestination="@id/moreFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.bottomnavigation.moretab.MoreFragment"
        android:label="MoreFragment"
        tools:layout="@layout/more_fragment">

        <action
            android:id="@+id/action_moreFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_moreFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.bottomnavigation.AboutUsFragment"
        android:label="AboutUsFragment"
        tools:layout="@layout/about_fragment"
        />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bottomnavigation.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/profile_fragment"
        />

</navigation>