<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_nav_graph"
    app:startDestination="@id/moreFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.bottomnavigation.MoreFragment"
        android:label="MoreFragment"
        tools:layout="@layout/more_fragment">
        <action
            android:id="@+id/action_moreFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.bottomnavigation.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/second_fragment" />
</navigation>