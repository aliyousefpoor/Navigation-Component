<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.bottomnavigation.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_groupingFragment"
            app:destination="@id/groupingFragment" />
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_moreFragment"
            app:destination="@id/moreFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupingFragment"
        android:name="com.example.bottomnavigation.GroupingFragment"
        android:label="GroupingFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bottomnavigation.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.bottomnavigation.MoreFragment"
        android:label="MoreFragment" />
</navigation>