<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/groupingFragment">


    <fragment
        android:id="@+id/groupingFragment"
        android:name="com.example.bottomnavigation.GroupingFragment"
        android:label="GroupingFragment"
        tools:layout="@layout/groupfragment"
        >
        <action
            android:id="@+id/action_groupingFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bottomnavigation.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/homefragment"
        >
        <action
            android:id="@+id/action_homeFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.bottomnavigation.MoreFragment"
        android:label="MoreFragment"
        tools:layout="@layout/morefragment"
        >
        <action
            android:id="@+id/action_moreFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.bottomnavigation.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/secondfragment"
        />
</navigation>